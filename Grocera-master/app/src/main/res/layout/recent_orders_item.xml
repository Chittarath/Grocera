<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="12dp">

    <TextView
        android:id="@+id/recent_order_item_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/recent_order_item_shop_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Address"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recent_order_item_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Rs. 103"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/dotted"
        android:layerType="software"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/recent_order_item_bought_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:text="Item1 x 2, Item x 3"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"/>

    <TextView
        android:id="@+id/recent_order_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:text="Date"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"/>

    <LinearLayout
        android:id="@+id/order_options_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <Button
            android:id="@+id/recent_order_item_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_stroke"
            android:textColor="@color/colorPrimary"
            android:text="CANCEL"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"/>

        <Button
            android:id="@+id/recent_order_item_reorder_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_stroke"
            android:textColor="@color/colorPrimary"
            android:text="REORDER"
            android:visibility="gone"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="18dp"
        android:background="#c0c0c0"/>

</LinearLayout>