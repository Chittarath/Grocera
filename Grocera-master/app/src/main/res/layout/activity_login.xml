<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30B330"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/shopping_basket"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grocera"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:textSize="48dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="Phone number"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/input_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/first_char_otp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/second_char_otp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/third_char_otp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/fourth_char_otp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:inputType="number"
                android:textColor="@android:color/white" />
            <EditText
                android:id="@+id/fifth_char_otp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/sixth_char_otp"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:inputType="number"
                android:textColor="@android:color/white" />
        </LinearLayout>


        <TextView
            android:id="@+id/send_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="1dp"
            android:padding="4dp"
            android:text="Send OTP"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/green_gradient"/>

        <TextView
            android:id="@+id/verify_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/green_gradient"
            android:elevation="1dp"
            android:padding="4dp"
            android:text="Verify OTP"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

        <!-- Login Button -->

        <!-- Link to Login Screen -->
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:padding="120dp"
        android:visibility="gone" />
</RelativeLayout>